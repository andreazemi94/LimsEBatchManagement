<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="600dp"
    android:background="@drawable/unlock_batch_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/batch_man_layout_header"
        android:layout_width="1200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/unlock_batch_background"
        android:backgroundTint="@color/green_merieux"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/batch_man_textviex_email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="11dp"
            android:text="Inserimento Note Batch"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Note Ufficiali"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/batch_man_note_ufficiali"
        app:layout_constraintStart_toStartOf="@+id/batch_man_note_ufficiali"
        app:layout_constraintTop_toBottomOf="@+id/batch_man_layout_header" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Lista Campioni"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/batch_man_note_lista_campioni"
        app:layout_constraintStart_toStartOf="@+id/batch_man_note_lista_campioni"
        app:layout_constraintTop_toBottomOf="@+id/batch_man_layout_header" />

    <EditText
        android:id="@+id/batch_man_note_operative"
        android:layout_width="430dp"
        android:layout_height="510dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="4dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Note Operative Laboratorio"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/batch_man_note_operative"
        app:layout_constraintStart_toStartOf="@+id/batch_man_note_operative"
        app:layout_constraintTop_toBottomOf="@+id/batch_man_layout_header" />

    <EditText
        android:id="@+id/batch_man_note_ufficiali"
        android:layout_width="430dp"
        android:layout_height="510dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="4dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/batch_man_note_operative"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/batch_man_note_lista_campioni"
        android:layout_width="320dp"
        android:layout_height="510dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="4dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/batch_man_note_ufficiali"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>